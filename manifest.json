{
  "manifest_version": 2,

  "name": "Facebook Read Cards Record",
  "description": "Facebook cards/stories will be toggled after read.",
  "version": "0.0.9",
  "icons": { "128": "favicon.png" },
  "author": "tsaikd <tsaikd@gmail.com>",
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "fbrecord-popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/", "https://www.facebook.com/?ref=logo"],
      "css": ["fbrecord-content.css"],
      "js": ["lib/jquery/dist/jquery.js", "fbrecord-ga.js", "fbrecord-content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "https://www.facebook.com/"
  ],
  "web_accessible_resources": [
    "icon.png",
    "ga.js"
  ]
}
